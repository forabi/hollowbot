{
  "name": "hollowbot",
  "version": "1.0.0",
  "private": true,
  "description": "A simple helpful robot for Hollowverse",
  "repository": "https://github.com/hollowverse/hollowbot.git",
  "homepage": "https://github.com/hollowverse/hollowbot#readme",
  "license": "Unlicense",
  "scripts": {
    "test": "run-p validate-file-names lint-js lint-ts",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-ts": "tslint 'src/*.ts' 'server/src/*.ts{,x}'",
    "build": "tsc",
    "clean": "rm -rf scripts/dist",
    "start": "hubot --adapter discord --name @hb#5922",
    "dev": "nodemon --watch src --ext ts --exec 'run-s build start'",
    "validate-file-names": "validate-file-names",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ]
  },
  "pre-commit": [
    "validate-file-names",
    "lint-staged"
  ],
  "dependencies": {
    "@hollowverse/common": "https://github.com/hollowverse/common",
    "github": "^10.0.0",
    "hubot": "^2.19.0",
    "hubot-diagnostics": "0.0.2",
    "hubot-discord": "^1.3.0",
    "hubot-help": "^0.2.2",
    "hubot-redis-brain": "0.0.4",
    "hubot-rules": "^0.1.2",
    "hubot-scripts": "^2.17.2",
    "hubot-shell": "^1.0.2",
    "hubot-shipit": "^0.2.1"
  },
  "devDependencies": {
    "@types/chance": "^0.7.33",
    "@types/hubot": "^2.19.0",
    "@types/node": "^8.0.15",
    "@types/shelljs": "^0.7.4",
    "babel-eslint": "^7.2.3",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.1",
    "ts-node": "^3.2.1",
    "tslint": "^5.6.0",
    "tslint-config-prettier": "^1.3.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-loader": "^3.5.3",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2"
  }
}
