  "pre-commit": "lint-staged",
  "commonpkg": "@hollowverse/common-config",
  "dependencies": {
    "@hollowverse/common-config": "hollowverse/common-config",
    "@types/node": "^7.0.2",
    "@types/request-promise": "^4.1.33",
    "commonpkg": "^2.0.0",
    "discord.js": "^11.1.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.1"
  },
  "devDependencies": {
    "husky": "^0.13.3",
    "lint-staged": "^3.4.2",
    "ts-node": "^3.0.3",
    "tslint": "^5.3.2",
    "tslint-config-standard": "^5.0.2",
    "typescript": "^2.3.3"
  }
}
