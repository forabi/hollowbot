{
  "name": "hollowbot",
  "version": "1.0.0",
  "private": true,
  "description": "A simple helpful robot for Hollowverse",
  "repository": "https://github.com/hollowverse/hollowbot.git",
  "homepage": "https://github.com/hollowverse/hollowbot#readme",
  "license": "Unlicense",
  "scripts": {
    "test": "run-p validate-file-names lint-js lint-ts check-js",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-ts": "tslint '**/*.ts{,x}' --exclude 'node_modules/**/*'",
    "check-js": "tsc --noEmit",
    "start": "node index.js",
    "dev": "nodemon --watch . --ext js,json --exec 'run-s check-js start'",
    "validate-file-names": "validate-file-names",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ]
  },
  "pre-commit": [
    "validate-file-names",
    "lint-staged"
  ],
  "dependencies": {
    "@hollowverse/common": "https://github.com/hollowverse/common",
    "chance": "^1.0.11",
    "github": "^10.0.0",
    "hubot": "^2.19.0",
    "hubot-discord": "^1.3.0",
    "hubot-help": "^0.2.2",
    "shelljs": "^0.7.8"
  },
  "devDependencies": {
    "@types/chance": "^0.7.35",
    "@types/hubot": "^2.19.0",
    "@types/inherits": "^0.0.30",
    "@types/node": "^8.0.26",
    "@types/shelljs": "^0.7.4",
    "babel-eslint": "^7.2.3",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "ts-node": "^3.2.1",
    "tslint": "^5.6.0",
    "tslint-config-prettier": "^1.3.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2"
  }
}
