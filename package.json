{
  "name": "hollowbot",
  "version": "1.0.0",
  "description": "Chatops for Hollowverse",
  "main": "src/activate.ts",
  "license": "Unlicense",
  "scripts": {
    "bot/dev": "nodemon --exec ts-node src/activate.ts",
    "bot/prod": "ts-node src/activate.ts",
    "lint": "tslint '**/*.t{s,sx}' -e '**/node_modules/**' --fix --project ./tsconfig.json --type-check",
    "precommit": "lint-staged",
    "test": "yarn lint && yarn bot/prod"
